<Window x:Class="BuySideUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuySideUI"
        mc:Ignorable="d"
		DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.Resources>
			<DataTemplate x:Key="MessageTemplate">
				<Border CornerRadius="2" BorderThickness="1" BorderBrush="DarkGreen" Margin="0,0,0,5" Padding="2">
					<TextBlock Text="{Binding .}" Height="16"/>
				</Border>
			</DataTemplate>
		</Grid.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="162"/>
			<ColumnDefinition/>
			<ColumnDefinition Width="182"/>
		</Grid.ColumnDefinitions>
		<Rectangle Fill="#FFB4F7C3" Grid.Column="2"/>
		<Rectangle Fill="#FFB4D9F7"/>
		<Button Content="Add"
				Command="{Binding AddOrderCommand}"
				HorizontalAlignment="Left" Margin="27,60,0,0" VerticalAlignment="Top" Width="108" Height="20"/>
		<Button Content="Cancel"
			Command="{Binding CancelBuySideOrderCommand}"
			HorizontalAlignment="Left" Margin="27,85,0,0" VerticalAlignment="Top" Width="108" Height="20"/>
		<TextBlock TextWrapping="Wrap" Text="BUY SIDE" VerticalAlignment="Top" FontSize="16" Foreground="#FF0F5091" Margin="48,15,48,0" HorizontalAlignment="Center" Height="21" Width="66"/>
		<ItemsControl 
			ItemsSource="{Binding BuySideMessages}" 
			Margin="10,120,10,0" 
			ItemTemplate="{StaticResource MessageTemplate}" />

		<TextBlock 
			Text="{Binding BuySideStepCount, StringFormat=Steps: \{0\}/2}"
			TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,38,0,0" TextAlignment="Center" Height="16"/>


		<ItemsControl Grid.Column="1"
			ItemsSource="{Binding SellSideOrders}" Margin="6,38,12,0">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<DockPanel LastChildFill="False">
						<TextBlock Text="{Binding BrokerName}" DockPanel.Dock="Left"/>
						<TextBlock Text="{Binding State}" DockPanel.Dock="Right"/>
					</DockPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<TextBlock Grid.Column="1" TextWrapping="Wrap" Text="{Binding StateName, Mode=OneWay, StringFormat=State: \{0\}}" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Height="19"/>

		<ItemsControl Grid.Column="2" 
			ItemsSource="{Binding Brokers}" Margin="4,38,0,0">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Vertical" Margin="0,0,0,8">
						<TextBlock Text="{Binding Name}"/>
						<Grid Margin="0" Height="Auto">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="6.5"/>
								<RowDefinition Height="20"/>
							</Grid.RowDefinitions>
							<Button Command="{Binding AcceptCommand}" Content="Accept" Margin="0" Grid.RowSpan="1" Width="50" HorizontalAlignment="Left"/>
							<Button Command="{Binding RejectCommand}" Content="Reject" Margin="55,0,0,0" Grid.Row="0" Width="50" HorizontalAlignment="Left"/>
							<Button Command="{Binding DeleteCommand}" Content="Delete" Grid.Row="2" Width="50" HorizontalAlignment="Left" Margin="0"/>
							<Button Command="{Binding AllocateCommand}" Content="Allocate" Grid.Row="2" Width="50" HorizontalAlignment="Left" Margin="55,0,0,0"/>
							<Button Command="{Binding RejectCancelCommand}" Content="Rej. Cancel" Grid.Row="2" Width="61" HorizontalAlignment="Left" Margin="110,0,0,0" />
						</Grid>
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="SELL SIDE" VerticalAlignment="Top" FontSize="16" Foreground="#FF05510C" Grid.Column="2" Margin="59,15,55,0" Height="21" Width="68"/>
		<ItemsControl Grid.Column="2" 
			ItemsSource="{Binding SellSideMessages}" 
			Margin="10,250,10,0" 
			ItemTemplate="{StaticResource MessageTemplate}" />
		<Button Content="Reset" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="76" Click="button_Click" Height="20" Margin="50,0,47,0"/>

	</Grid>
</Window>

